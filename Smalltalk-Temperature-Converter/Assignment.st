BorderedMorph subclass: #TempConverter	instanceVariableNames: 'tCelsiusLabel tConvertButton tTextInput value convertedValue'	classVariableNames: ''	poolDictionaries: ''	category: 'Assignment'!!TempConverter methodsFor: 'action-button-actions' stamp: 'Anonymous 1/8/2018 18:25'!buttonPressed	value := tTextInput  contents asNumber.	convertedValue := ((value - 32.0) * 5.0/9.0).	tTextInput  contents: convertedValue asString. ! !!TempConverter methodsFor: 'initialization' stamp: 'Anonymous 1/8/2018 18:22'!initializesuper initialize.self bounds: (0@0 corner: 300@200).color := Color gray. tCelsiusLabel := StringMorph contents: 'Temperature Converter'.tCelsiusLabel position: 80@40.tCelsiusLabel color: Color white.self addMorph: tCelsiusLabel. tConvertButton := SimpleButtonMorph new.tConvertButton label: 'Convert'.tConvertButton color: Color orange darker.tConvertButton bounds: (70@170 corner: 220@140).tConvertButton target: self.tConvertButton actionSelector: #buttonPressed.self addMorph: tConvertButton.tTextInput := TextMorph new.tTextInput backgroundColor: Color white.tTextInput color: Color black.tTextInput bounds: (100@100 corner: 190@190).tTextInput position: 100@90.self addMorph: tTextInput. ! !